<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="<%= "field_with_errors" if @book.errors.include?(:title) %>"><label>Title</label></div>
  <div class="<%= "field_with_errors" if @book.errors.include?(:title) %>"><%= f.text_field :title %></div>
  <div class="<%= "field_with_errors" if @book.errors.include?(:body) %>"><label>Body</label></div>
  <div class="<%= "field_with_errors" if @book.errors.include?(:body) %>"><%= f.text_area :body %></div>

  <p><%= f.submit 'Update Book' %></p>

  <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
<% end %>